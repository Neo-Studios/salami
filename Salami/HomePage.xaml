                        <TextBlock Text="Customize your salami appreciation experience" 
                                  TextWrapping="Wrap" Opacity="0.8"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Fun Facts Section -->
            <Border Background="{StaticResource SalamiPink}" 
                   CornerRadius="8" 
                   Padding="24">
                <StackPanel Spacing="12">
                    <TextBlock Text="Why Salami is Amazing" 
                              FontSize="28" 
                              FontWeight="SemiBold"
                              Foreground="{StaticResource SalamiRed}"/>
                    <StackPanel Spacing="8">
                        <TextBlock Text="â€¢ Perfect blend of spices and meat" FontSize="16"/>
