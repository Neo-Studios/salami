<Page
    x:Class="Salami.RecipesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Salami"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Spacing="24" Padding="24">
            <!-- Header -->
            <StackPanel Spacing="12">
                <TextBlock Text="Salami Recipes" 
                          FontSize="42" 
                          FontWeight="Bold"/>
                <TextBlock Text="Delicious ways to enjoy salami in your meals" 
                          FontSize="18" 
                          Opacity="0.8"/>
            </StackPanel>

            <!-- Recipe 1: Classic Salami & Cheese Platter -->
            <StackPanel Spacing="16">
                <Border Background="{StaticResource SalamiRed}" 
                       CornerRadius="8" 
                       Padding="20">
                    <TextBlock Text="ðŸ§€ Classic Salami &amp; Cheese Platter" 
                              FontSize="28" 
                              FontWeight="Bold"
                              Foreground="White"/>
                </Border>
                
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                       CornerRadius="8" Padding="24">
                    <StackPanel Spacing="16">
                        <TextBlock Text="Ingredients:" FontSize="20" FontWeight="SemiBold"/>
                        <StackPanel Spacing="6">
                            <TextBlock Text="â€¢ 200g assorted salami (Genoa, Milano, Soppressata)" FontSize="16"/>
                            <TextBlock Text="â€¢ 150g aged Parmesan cheese" FontSize="16"/>
                            <TextBlock Text="â€¢ 100g Manchego cheese" FontSize="16"/>
                            <TextBlock Text="â€¢ Fresh figs or grapes" FontSize="16"/>
                            <TextBlock Text="â€¢ Crusty bread or crackers" FontSize="16"/>
                            <TextBlock Text="â€¢ Honey for drizzling" FontSize="16"/>
                            <TextBlock Text="â€¢ Fresh basil leaves" FontSize="16"/>
                        </StackPanel>
                        
                        <TextBlock Text="Instructions:" FontSize="20" FontWeight="SemiBold"/>
                        <StackPanel Spacing="6">
                            <TextBlock TextWrapping="Wrap" FontSize="16">
                                1. Arrange salami slices in decorative folds or rolls on a large board
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" FontSize="16">
                                2. Cut cheeses into bite-sized cubes or wedges
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" FontSize="16">
                                3. Place fruits around the board for color and freshness
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" FontSize="16">
                                4. Drizzle honey over cheese and add fresh basil
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" FontSize="16">
                                5. Serve with warm bread or crackers
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Recipe 2: Salami Pizza -->
            <StackPanel Spacing="16">
                <Border Background="{StaticResource SalamiRed}" 
                       CornerRadius="8" 
                       Padding="20">
                    <TextBlock Text="ðŸ• Gourmet Salami Pizza" 
                              FontSize="28" 
                              FontWeight="Bold"
                              Foreground="White"/>
                </Border>
                
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                       CornerRadius="8" Padding="24">
                    <StackPanel Spacing="16">
                        <TextBlock Text="Ingredients:" FontSize="20" FontWeight="SemiBold"/>
                        <StackPanel Spacing="6">
                            <TextBlock Text="â€¢ 1 pizza dough (store-bought or homemade)" FontSize="16"/>
                            <TextBlock Text="â€¢ 100g tomato sauce" FontSize="16"/>
                            <TextBlock Text="â€¢ 150g mozzarella cheese, shredded" FontSize="16"/>
                            <TextBlock Text="â€¢ 100g salami slices (Milano or Soppressata)" FontSize="16"/>
                            <TextBlock Text="â€¢ Fresh arugula" FontSize="16"/>
                            <TextBlock Text="â€¢ Olive oil" FontSize="16"/>
                            <TextBlock Text="â€¢ Red pepper flakes (optional)" FontSize="16"/>
                        </StackPanel>
                        
                        <TextBlock Text="Instructions:" FontSize="20" FontWeight="SemiBold"/>
                        <StackPanel Spacing="6">
                            <TextBlock TextWrapping="Wrap" FontSize="16">
                                1. Preheat oven to 475Â°F (245Â°C)
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" FontSize="16">
                                2. Roll out pizza dough and spread tomato sauce evenly
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" FontSize="16">
                                3. Sprinkle mozzarella cheese over the sauce
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" FontSize="16">
                                4. Arrange salami slices on top
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" FontSize="16">
                                5. Bake for 12-15 minutes until crust is golden and cheese is bubbly
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" FontSize="16">
                                6. Top with fresh arugula, drizzle with olive oil, and add red pepper flakes
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Recipe 3: Salami Pasta -->
            <StackPanel Spacing="16">
                <Border Background="{StaticResource SalamiRed}" 
                       CornerRadius="8" 
                       Padding="20">
                    <TextBlock Text="ðŸ Salami Carbonara" 
                              FontSize="28" 
                              FontWeight="Bold"
                              Foreground="White"/>
                </Border>
                
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                       CornerRadius="8" Padding="24">
                    <StackPanel Spacing="16">
                        <TextBlock Text="Ingredients:" FontSize="20" FontWeight="SemiBold"/>
                        <StackPanel Spacing="6">
                            <TextBlock Text="â€¢ 400g spaghetti or fettuccine" FontSize="16"/>
                            <TextBlock Text="â€¢ 150g salami, diced" FontSize="16"/>
                            <TextBlock Text="â€¢ 3 large eggs" FontSize="16"/>
                            <TextBlock Text="â€¢ 100g Pecorino Romano cheese, grated" FontSize="16"/>
                            <TextBlock Text="â€¢ 2 cloves garlic, minced" FontSize="16"/>
                            <TextBlock Text="â€¢ Black pepper to taste" FontSize="16"/>
                            <TextBlock Text="â€¢ Fresh parsley" FontSize="16"/>
                        </StackPanel>
                        
                        <TextBlock Text="Instructions:" FontSize="20" FontWeight="SemiBold"/>
                        <StackPanel Spacing="6">
                            <TextBlock TextWrapping="Wrap" FontSize="16">
                                1. Cook pasta according to package directions, reserve 1 cup pasta water
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" FontSize="16">
                                2. In a pan, cook diced salami until crispy, add garlic for last minute
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" FontSize="16">
                                3. Whisk eggs and Pecorino cheese together in a bowl
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" FontSize="16">
                                4. Drain pasta and add to pan with salami
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" FontSize="16">
                                5. Remove from heat and quickly stir in egg mixture, adding pasta water to create creamy sauce
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" FontSize="16">
                                6. Season with black pepper and garnish with parsley
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Recipe 4: Salami Sandwich -->
            <StackPanel Spacing="16">
                <Border Background="{StaticResource SalamiRed}" 
                       CornerRadius="8" 
                       Padding="20">
                    <TextBlock Text="ðŸ¥– Italian Salami Sandwich" 
