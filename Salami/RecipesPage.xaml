                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                       CornerRadius="8" Padding="24">
                    <StackPanel Spacing="16">
                        <TextBlock Text="Ingredients:" FontSize="20" FontWeight="SemiBold"/>
                        <StackPanel Spacing="6">
                            <TextBlock Text="â€¢ Ciabatta or baguette" FontSize="16"/>
                            <TextBlock Text="â€¢ 100g mixed salami (Genoa, Soppressata)" FontSize="16"/>
                            <TextBlock Text="â€¢ Provolone cheese slices" FontSize="16"/>
                            <TextBlock Text="â€¢ Fresh tomato slices" FontSize="16"/>
                            <TextBlock Text="â€¢ Lettuce leaves" FontSize="16"/>
                            <TextBlock Text="â€¢ Pepperoncini peppers" FontSize="16"/>
                            <TextBlock Text="â€¢ Olive oil and balsamic vinegar" FontSize="16"/>
                            <TextBlock Text="â€¢ Italian seasoning" FontSize="16"/>
                        </StackPanel>
                        
                        <TextBlock Text="Instructions:" FontSize="20" FontWeight="SemiBold"/>
                        <StackPanel Spacing="6">
                            <TextBlock TextWrapping="Wrap" FontSize="16">
                                1. Slice bread lengthwise and lightly toast
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" FontSize="16">
                                2. Drizzle olive oil and balsamic on bottom half
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" FontSize="16">
                                3. Layer salami, provolone, tomatoes, lettuce, and peppers
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" FontSize="16">
                                4. Sprinkle with Italian seasoning
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" FontSize="16">
                                5. Press together and slice diagonally
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Tips Section -->
            <Border Background="{StaticResource SalamiPink}" 
                   CornerRadius="12" 
                   Padding="24">
                <StackPanel Spacing="16">
                    <TextBlock Text="ðŸ’¡ Pro Tips for Cooking with Salami" 
                              FontSize="28" 
                              FontWeight="Bold"
                              Foreground="{StaticResource SalamiRed}"/>
                    <StackPanel Spacing="8">
                        <TextBlock Text="â€¢ Let salami come to room temperature before serving for best flavor" FontSize="16"/>
                        <TextBlock Text="â€¢ Crisp salami in a pan to add texture to salads and pasta" FontSize="16"/>
