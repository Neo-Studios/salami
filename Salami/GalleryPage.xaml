<Page
    x:Class="Salami.GalleryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Salami"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Spacing="24" Padding="24">
            <!-- Header -->
            <StackPanel Spacing="12">
                <TextBlock Text="Salami Gallery" 
                          FontSize="42" 
                          FontWeight="Bold"/>
                <TextBlock Text="Explore the wonderful world of salami varieties" 
                          FontSize="18" 
                          Opacity="0.8"/>
            </StackPanel>

            <!-- Italian Salamis Section -->
            <StackPanel Spacing="16">
                <TextBlock Text="üáÆüáπ Italian Salamis" 
                          FontSize="32" 
                          FontWeight="SemiBold"
                          Foreground="{StaticResource SalamiRed}"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Genoa Salami -->
                    <Border Grid.Column="0" Grid.Row="0"
                           Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                           CornerRadius="8" Padding="20" Margin="0,0,8,8">
                        <StackPanel Spacing="12">
                            <TextBlock Text="Genoa Salami" FontSize="24" FontWeight="SemiBold"/>
                            <TextBlock TextWrapping="Wrap" Opacity="0.8">
                                Traditional Italian salami from Genoa, featuring a distinctive red wine flavor 
                                and coarse texture. Made with pork, wine, garlic, and peppercorns.
                            </TextBlock>
                            <TextBlock Text="Region: Liguria, Italy" FontSize="14" Opacity="0.6"/>
                        </StackPanel>
                    </Border>

                    <!-- Soppressata -->
                    <Border Grid.Column="1" Grid.Row="0"
                           Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                           CornerRadius="8" Padding="20" Margin="8,0,0,8">
                        <StackPanel Spacing="12">
                            <TextBlock Text="Soppressata" FontSize="24" FontWeight="SemiBold"/>
                            <TextBlock TextWrapping="Wrap" Opacity="0.8">
                                A pressed salami with chunks of fat, featuring bold spices including 
                                hot peppers. Known for its marbled appearance and rich, spicy flavor.
                            </TextBlock>
                            <TextBlock Text="Region: Southern Italy" FontSize="14" Opacity="0.6"/>
                        </StackPanel>
                    </Border>

                    <!-- Milano Salami -->
                    <Border Grid.Column="0" Grid.Row="1"
                           Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                           CornerRadius="8" Padding="20" Margin="0,8,8,0">
                        <StackPanel Spacing="12">
                            <TextBlock Text="Milano Salami" FontSize="24" FontWeight="SemiBold"/>
                            <TextBlock TextWrapping="Wrap" Opacity="0.8">
                                Finely ground, mild-flavored salami with subtle garlic notes. 
                                Has a smooth texture and is perfect for those preferring less spice.
                            </TextBlock>
                            <TextBlock Text="Region: Milano, Italy" FontSize="14" Opacity="0.6"/>
                        </StackPanel>
                    </Border>

                    <!-- Calabrese -->
                    <Border Grid.Column="1" Grid.Row="1"
                           Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                           CornerRadius="8" Padding="20" Margin="8,8,0,0">
                        <StackPanel Spacing="12">
                            <TextBlock Text="Calabrese (Nduja)" FontSize="24" FontWeight="SemiBold"/>
                            <TextBlock TextWrapping="Wrap" Opacity="0.8">
                                Spicy, spreadable salami from Calabria. Made with Calabrian chili peppers, 
                                giving it a distinctive red color and fiery kick.
                            </TextBlock>
                            <TextBlock Text="Region: Calabria, Italy" FontSize="14" Opacity="0.6"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>

            <!-- Spanish Salamis Section -->
            <StackPanel Spacing="16">
                <TextBlock Text="üá™üá∏ Spanish Salamis" 
                          FontSize="32" 
                          FontWeight="SemiBold"
                          Foreground="{StaticResource SalamiRed}"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Chorizo -->
                    <Border Grid.Column="0"
                           Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                           CornerRadius="8" Padding="20" Margin="0,0,8,0">
                        <StackPanel Spacing="12">
                            <TextBlock Text="Chorizo" FontSize="24" FontWeight="SemiBold"/>
                            <TextBlock TextWrapping="Wrap" Opacity="0.8">
                                Spanish cured sausage heavily seasoned with smoked paprika (piment√≥n), 
                                giving it a distinctive red color and smoky flavor.
                            </TextBlock>
                            <TextBlock Text="Region: Spain" FontSize="14" Opacity="0.6"/>
                        </StackPanel>
                    </Border>

                    <!-- Salchich√≥n -->
                    <Border Grid.Column="1"
                           Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                           CornerRadius="8" Padding="20" Margin="8,0,0,0">
                        <StackPanel Spacing="12">
                            <TextBlock Text="Salchich√≥n" FontSize="24" FontWeight="SemiBold"/>
                            <TextBlock TextWrapping="Wrap" Opacity="0.8">
                                Similar to Italian salami but with black peppercorns and nutmeg. 
                                Finely minced with a delicate, slightly sweet flavor.
                            </TextBlock>
                            <TextBlock Text="Region: Spain" FontSize="14" Opacity="0.6"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>

            <!-- French & German Salamis Section -->
            <StackPanel Spacing="16">
                <TextBlock Text="üá´üá∑üá©üá™ French &amp; German Salamis" 
                          FontSize="32" 
                          FontWeight="SemiBold"
                          Foreground="{StaticResource SalamiRed}"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Saucisson Sec -->
                    <Border Grid.Column="0"
                           Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                           CornerRadius="8" Padding="20" Margin="0,0,8,0">
                        <StackPanel Spacing="12">
                            <TextBlock Text="Saucisson Sec" FontSize="24" FontWeight="SemiBold"/>
                            <TextBlock TextWrapping="Wrap" Opacity="0.8">
                                French dry-cured sausage often studded with peppercorns, herbs, 
                                or even truffles. A staple of French charcuterie.
                            </TextBlock>
                            <TextBlock Text="Region: France" FontSize="14" Opacity="0.6"/>
                        </StackPanel>
                    </Border>

                    <!-- Teewurst -->
                    <Border Grid.Column="1"
                           Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                           CornerRadius="8" Padding="20" Margin="8,0,0,0">
                        <StackPanel Spacing="12">
                            <TextBlock Text="Teewurst" FontSize="24" FontWeight="SemiBold"/>
                            <TextBlock TextWrapping="Wrap" Opacity="0.8">
                                German spreadable salami with a smooth texture, traditionally enjoyed 
                                with tea. Made from pork and bacon with a rich, smoky flavor.
                            </TextBlock>
                            <TextBlock Text="Region: Germany" FontSize="14" Opacity="0.6"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>

            <!-- Appreciation Section -->
            <Border Background="{StaticResource SalamiRed}" 
                   CornerRadius="12" 
                   Padding="32">
                <StackPanel Spacing="16" HorizontalAlignment="Center">
                    <TextBlock Text="So Many Varieties!" 
                              FontSize="32" 
                              FontWeight="Bold"
                              Foreground="White"
                              TextAlignment="Center"/>
                    <TextBlock Text="Each salami tells a story of regional traditions, family recipes, and centuries of perfection." 
                              FontSize="16"
                              Foreground="{StaticResource SalamiPink}"
                              TextAlignment="Center"
                              TextWrapping="Wrap"
                              MaxWidth="600"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
