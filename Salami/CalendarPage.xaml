<Page
    x:Class="Salami.CalendarPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Salami"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{StaticResource SalamiRed}" 
                Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Spacing="4">
                    <TextBlock Text="ðŸ“… Salami Calendar" 
                              FontSize="32" 
                              FontWeight="Bold"
                              Foreground="White"/>
                    <TextBlock Text="Plan your salami tastings, festivals, and events" 
                              FontSize="14"
                              Foreground="{StaticResource SalamiPink}"/>
                </StackPanel>

                <StackPanel Grid.Column="1" 
                           Orientation="Horizontal" 
                           Spacing="12"
                           VerticalAlignment="Center">
                    <Button Content="â—€ Prev" Click="PrevMonth_Click" Padding="12,8"/>
                    <TextBlock x:Name="CurrentMonthText" 
                              Text="January 2025" 
                              FontSize="20"
                              FontWeight="SemiBold"
                              Foreground="White"
                              VerticalAlignment="Center"
                              Margin="12,0"/>
                    <Button Content="Next â–¶" Click="NextMonth_Click" Padding="12,8"/>
                    <Button Content="Today" Click="Today_Click" Style="{StaticResource AccentButtonStyle}" Padding="12,8"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Calendar Grid -->
        <ScrollViewer Grid.Row="1">
            <Grid Padding="24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Calendar View -->
                <Border Grid.Column="0" 
                       Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                       CornerRadius="8"
                       Padding="16"
                       Margin="0,0,12,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Day Headers -->
                        <Grid Grid.Row="0" Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="Sun" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="1" Text="Mon" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="2" Text="Tue" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="3" Text="Wed" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="4" Text="Thu" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="5" Text="Fri" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="6" Text="Sat" FontWeight="Bold" HorizontalAlignment="Center"/>
                        </Grid>

                        <!-- Calendar Days Grid -->
                        <Grid x:Name="CalendarGrid" Grid.Row="1">
                            <!-- Will be populated dynamically with 6 rows x 7 columns -->
                        </Grid>
                    </Grid>
                </Border>

                <!-- Events & Festivals Sidebar -->
                <StackPanel Grid.Column="1" Spacing="16">
                    <!-- Add Event Card -->
                    <Border Background="{StaticResource SalamiRed}"
                           CornerRadius="8"
                           Padding="16">
                        <StackPanel Spacing="12">
                            <TextBlock Text="âž• Add Event" 
                                      FontSize="18" 
                                      FontWeight="SemiBold"
                                      Foreground="White"/>
                            <TextBox x:Name="EventTitleBox" 
                                    PlaceholderText="Event title"
                                    Margin="0,0,0,8"/>
                            <DatePicker x:Name="EventDatePicker"/>
                            <TimePicker x:Name="EventTimePicker"/>
                            <ComboBox x:Name="EventTypeCombo" 
                                     PlaceholderText="Event type"
                                     Width="200"
                                     HorizontalAlignment="Stretch">
                                <ComboBoxItem Content="Tasting"/>
                                <ComboBoxItem Content="Festival"/>
                                <ComboBoxItem Content="Shopping"/>
                                <ComboBoxItem Content="Recipe"/>
                                <ComboBoxItem Content="Other"/>
                            </ComboBox>
                            <Button Content="Add Event" 
                                   Click="AddEvent_Click"
                                   Style="{StaticResource AccentButtonStyle}"
                                   HorizontalAlignment="Stretch"/>
                        </StackPanel>
                    </Border>

                    <!-- Upcoming Events -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                           CornerRadius="8"
                           Padding="16">
                        <StackPanel Spacing="12">
                            <TextBlock Text="ðŸ“‹ Upcoming Events" 
                                      FontSize="18" 
                                      FontWeight="SemiBold"
                                      Foreground="{StaticResource SalamiRed}"/>
                            <ScrollViewer Height="300">
                                <StackPanel x:Name="UpcomingEventsList" Spacing="8">
                                    <!-- Events will be added here -->
                                </StackPanel>
                            </ScrollViewer>
                        </StackPanel>
                    </Border>

                    <!-- Salami Festivals -->
                    <Border Background="{StaticResource SalamiPink}"
                           CornerRadius="8"
                           Padding="16">
                        <StackPanel Spacing="12">
                            <TextBlock Text="ðŸŽ‰ Annual Festivals" 
                                      FontSize="18" 
                                      FontWeight="SemiBold"
                                      Foreground="{StaticResource SalamiRed}"/>
                            <StackPanel Spacing="8">
                                <Border Background="White" 
                                       CornerRadius="4" 
                                       Padding="8">
                                    <StackPanel>
                                        <TextBlock Text="Sagra del Salame" FontWeight="SemiBold"/>
                                        <TextBlock Text="ðŸ“ Felino, Italy" FontSize="12" Opacity="0.7"/>
                                        <TextBlock Text="ðŸ“… September" FontSize="12"/>
                                    </StackPanel>
                                </Border>

                                <Border Background="White" 
                                       CornerRadius="4" 
                                       Padding="8">
                                    <StackPanel>
                                        <TextBlock Text="Festival of Salami" FontWeight="SemiBold"/>
                                        <TextBlock Text="ðŸ“ Sant'Angelo, Italy" FontSize="12" Opacity="0.7"/>
                                        <TextBlock Text="ðŸ“… October" FontSize="12"/>
                                    </StackPanel>
                                </Border>

                                <Border Background="White" 
                                       CornerRadius="4" 
                                       Padding="8">
                                    <StackPanel>
                                        <TextBlock Text="Salami Festival" FontWeight="SemiBold"/>
                                        <TextBlock Text="ðŸ“ Csaba, Hungary" FontSize="12" Opacity="0.7"/>
                                        <TextBlock Text="ðŸ“… October" FontSize="12"/>
                                    </StackPanel>
                                </Border>

                                <Border Background="White" 
                                       CornerRadius="4" 
                                       Padding="8">
                                    <StackPanel>
                                        <TextBlock Text="Chorizo Festival" FontWeight="SemiBold"/>
                                        <TextBlock Text="ðŸ“ Candelario, Spain" FontSize="12" Opacity="0.7"/>
                                        <TextBlock Text="ðŸ“… February" FontSize="12"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Seasonal Recommendations -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                           CornerRadius="8"
                           Padding="16">
                        <StackPanel Spacing="12">
                            <TextBlock Text="ðŸŒŸ Seasonal Tips" 
                                      FontSize="18" 
                                      FontWeight="SemiBold"
                                      Foreground="{StaticResource SalamiRed}"/>
                            <StackPanel Spacing="6">
                                <TextBlock TextWrapping="Wrap" FontSize="13">
                                    <Bold>Winter:</Bold> Best time for curing salamis at home due to cooler temperatures
                                </TextBlock>
                                <TextBlock TextWrapping="Wrap" FontSize="13">
                                    <Bold>Spring:</Bold> Perfect for outdoor salami tastings and picnics
                                </TextBlock>
                                <TextBlock TextWrapping="Wrap" FontSize="13">
                                    <Bold>Summer:</Bold> Store salami properly to avoid heat damage
                                </TextBlock>
                                <TextBlock TextWrapping="Wrap" FontSize="13">
                                    <Bold>Fall:</Bold> Festival season! Visit local salami producers
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
